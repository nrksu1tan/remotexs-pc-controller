<Window x:Class="XrdRemote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoteXS" Height="500" Width="380"
        Background="Transparent" ResizeMode="CanMinimize" WindowStyle="None" AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseDown">

    <Border CornerRadius="12" Background="#121212" BorderBrush="#333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <RowDefinition Height="*"/>  <RowDefinition Height="30"/> </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="12,12,0,0" BorderBrush="#333" BorderThickness="0,0,0,1">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🎛️" FontSize="16" Margin="0,0,10,0"/> <TextBlock Text="RemoteXS" Foreground="#DDD" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        <Border Background="#00E676" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="SUPER PUPER" Foreground="Black" FontSize="9" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="—" Width="30" Height="30" Background="Transparent" Foreground="#888" 
                                BorderThickness="0" Click="Minimize_Click" Cursor="Hand" FontSize="14"/>
                        <Button Content="✕" Width="30" Height="30" Background="Transparent" Foreground="#888" 
                                BorderThickness="0" Click="CloseToTray_Click" Cursor="Hand" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <Border Width="220" Height="220" Background="White" CornerRadius="8" Padding="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                    </Border.Effect>
                    <Image x:Name="QrImage" Stretch="Uniform"/>
                </Border>

<StackPanel Margin="0,25,0,0" HorizontalAlignment="Center">
    <TextBlock Text="SERVER ADDRESS" Foreground="#555" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
    <Border Background="#1E1E1E" CornerRadius="6" Padding="15,8" Margin="0,8">
        <TextBlock x:Name="IpText" Text="192.168.X.X:8080" Foreground="#00E676" 
                   FontSize="16" FontFamily="Consolas" FontWeight="Bold"/>
    </Border>
</StackPanel>

                <TextBlock Text="Scan QR code to connect device" Foreground="#444" FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                
                <TextBlock x:Name="VersionText" Text="BETA v1.0" Foreground="#333" FontSize="10" HorizontalAlignment="Center" Margin="0,5,0,0"/>

            </StackPanel>

            <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="0,0,12,12" BorderBrush="#333" BorderThickness="0,1,0,0">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="6" Height="6" Fill="#00E676" Margin="0,0,8,0"/>
                        <TextBlock Text="Service Running" Foreground="#888" FontSize="10"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="CurrentTrackText" Text="Ready" Foreground="#555" 
                               FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Center" 
                               TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>